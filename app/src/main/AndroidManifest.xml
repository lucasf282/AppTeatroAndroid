<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.appteatro.appteatro">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CadastroActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MenuLateralActivity"
            android:label="@string/title_activity_menu_lateral"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".RoomActivity"
            android:label="@string/title_activity_room"
            android:parentActivityName=".MenuLateralActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ChatRoomActivity"
            android:label="@string/title_activity_chat_room"
            android:parentActivityName=".RoomActivity"/>
        <activity
            android:name=".EditarPerfilActivity"
            android:label="Meu Perfil"
            android:parentActivityName=".MenuLateralActivity"/>
        <activity android:name=".EventoActivity" />
        <activity android:name=".LocalActivity"></activity>
    </application>

</manifest>