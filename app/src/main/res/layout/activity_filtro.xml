<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dip"
    tools:context="br.com.appteatro.appteatro.Activities.FiltroActivity">

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/ed_nome_evento"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:hint="Nome do Evento"
            android:inputType="text" />
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="10dip"
        android:text="Teatro:" />

    <Spinner
        android:id="@+id/spinner_teatro"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:prompt="@string/hint_confirmar_senha" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="10dip"
        android:text="GÃªnero:" />

    <Spinner
        android:id="@+id/spinner_genero"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:prompt="@string/hint_confirmar_senha" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/profile_layout"
        android:layout_margin="5dp"
        android:layout_marginTop="5dp"
        android:background="#fff"
        android:elevation="4dp"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="20dp">

        <Button
            android:id="@+id/buttonFiltrar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@color/colorAccent"
            android:text="Filtrar"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="18sp" />
    </android.support.constraint.ConstraintLayout>
</LinearLayout>